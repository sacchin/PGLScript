    <script>
      var day1 = new Date(2014, 11, 1);
      var day2 = new Date(2014, 11, 2);
      var day3 = new Date(2014, 11, 3);
      var day4 = new Date(2014, 11, 4);
      var day5 = new Date(2014, 11, 5);
      var day6 = new Date(2014, 11, 6);
      var day7 = new Date(2014, 11, 7);
      var day8 = new Date(2014, 11, 8);
      var day9 = new Date(2014, 11, 9);
      var day10 = new Date(2014, 11, 10);

      var parentNode = document.getElementById("divContent");

      var field = document.getElementById("field");
      field.style.width = ($(document).width()  * 0.4) + 'px';
      field.style.height = ($(document).height() / 3) + 'px';

      var element = document.getElementById("multiaxis");
      element.style.width = ($(document).width()  * 0.4) + 'px';
      element.style.height = ($(document).height()  / 3) + 'px';

      var multi_axis = new Charts.LineChart('multiaxis', {
        show_grid: true,
        show_y_labels: false,
        label_max: false,
        label_min: false,
        max_x_labels: 7,
        max_y_labels: 7
        });

        multi_axis.add_line({
          data: [[day1, 1],[day2, 1],[day3, 1],[day4, 1],[day5, 1],[day6, 1],[day7, 1],[day8, 1],[day9, 1],[day10, 1]],
        options: {line_color: "#00aadd", dot_color: "#00aadd", area_opacity: 0.0, dot_size: 5, smoothing: 0.3, line_width: 2}
        });

        multi_axis.add_line({
          data: [[day1, 2],[day2, 2],[day3, 3],[day4, 2],[day5, 3],[day6, 3],[day7, 2],[day8, 3],[day9, 3],[day10, 2]],
        options: {line_color: "#ffee33", dot_color: "#ffee33", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 3],[day2, 4],[day3, 4],[day4, 4],[day5, 2],[day6, 4],[day7, 4],[day8, 2],[day9, 4],[day10, 4]],
        options: {line_color: "#228b22", dot_color: "#228b22", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 4],[day2, 3],[day3, 2],[day4, 3],[day5, 5],[day6, 5],[day7, 3],[day8, 5],[day9, 5],[day10, 3]],
        options: {line_color: "#c71585", dot_color: "#c71585", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 6],[day2, 7],[day3, 7],[day4, 8],[day5, 4],[day6, 2],[day7, 5]],
        options: {line_color: "#a9a9a9", dot_color: "#a9a9a9", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 5],[day2, 6],[day3, 5],[day4, 6],[day5, 6],[day6, 9],[day7, 8]],
        options: {line_color: "#7cfc00", dot_color: "#7cfc00", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 7],[day2, 10],[day3, 9],[day4, 10],[day5, 7],[day6, 10],[day7, 9]],
        options: {line_color: "#20b2aa", dot_color: "#20b2aa", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 8],[day2, 5],[day3, 6],[day4, 5],[day5, 8],[day6, 6],[day7, 6]],
        options: {line_color: "#ffa500", dot_color: "#ffa500", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 9],[day2, 9],[day3, 8],[day4, 7],[day5, 9],[day6, 7],[day7, 7]],
        options: {line_color: "#9370db", dot_color: "#9370db", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.add_line({
          data: [[day1, 10],[day2, 8],[day3, 10],[day4, 9],[day5, 10],[day6, 8],[day7, 10]],
        options: {line_color: "#ff6347", dot_color: "#ff6347", fill_area: false, line_width: 2, smoothing: 0.3, dot_size: 5}
        });

        multi_axis.draw()
      </script>

